<div class="movie-details">
    <img src="{{movie.image}}" alt="{{movie.title}}">
    <div >
        <a href="/movies">Go back</a>
        <h2>{{movie.title}}</h2>
        <p>Director: {{movie.director}}</p>
        <p>Stars</p>
        <ul>
            {{#each movie.stars}}    
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{movie.description}}</p>
        {{#each movie.showtimes}}
            <span>{{this}} |</span>
        {{/each}}
    </div>
</div>